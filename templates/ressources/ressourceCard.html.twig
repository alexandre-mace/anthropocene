<div class="card ressource-card {% if (ressource.link is defined and 'youtube' in ressource.link) or (ressource.image is not null) %}pb-0{% endif %}">
    <div class="d-flex justify-content-between mb-3">
        <div class="theme" data-theme="{{ ressource.themes|join(' ') }}">
            {% if ressource.themes|length > 0 %}
                {% for theme in ressource.themes %}
                    <div class="d-inline card-theme theme mr-2 {% if loop.index == 1 %}pl-0{% endif %}">
                        {{ theme }}
                    </div>
                {% endfor %}
            {% endif %}
        </div>
        <div class="card-type type d-inline">
            {{ ressource.type }}
        </div>
    </div>
    <div class="card-author author">
        {{ ressource.author }}
    </div>
    <div class="card-title mb-4 title">
        {{ ressource.title }}
    </div>
    <div class="card-link mb-3">
        <a class="white-button" href="{{ ressource.link }}">Voir la ressource</a>
    </div>
    <div class="card-content {% if (ressource.link is defined and 'youtube' in ressource.link) or (ressource.image is not null) %}mt-auto{% endif %}">
        {% if ressource.link is defined and 'youtube' in ressource.link %}
            <iframe width="100%" height="315"
                    src="{{ ressource.link|replace({'watch?v=': '/embed/'}) }}">
            </iframe>
        {% endif %}
        {% if ressource.image is not null %}
            <div class="mt-4">
                <div class="ressource-img-wrapper">
                    <img class="ressource-img glightbox" src="{{ asset('/files/image/' ~ ressource.image) }}" alt="{{ ressource.title }}">
                </div>
            </div>
        {% endif %}
    </div>
</div>