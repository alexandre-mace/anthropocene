<script>
    let filterFunctions = [];

    const filterType = (type) => {
        activeFilters.push({
            type: 'type',
            value: type
        });
    }

    // fill select options
    let types = [];
    list.items.forEach(function(item){
        types.push(item.values().type)
    });
    [...new Set(types)].forEach(function(item){
        const typeSelect = document.getElementById('select-multiple-format');
        typeSelect.options[typeSelect.options.length] = new Option(item, item);
    });

    const typeSelector = document.getElementById('select-multiple-format');
    typeSelector.addEventListener('change', (event) => {
        [...event.target.options].forEach((option) => {
            if (option.selected && activeFilters.findIndex((activeFilter) => activeFilter.type === 'type' && activeFilter.value === option.value) === -1) {
                filterType(option.value);
            } else {
                if (!option.selected && activeFilters.findIndex((activeFilter) => activeFilter.type === 'type' && activeFilter.value === option.value) !== -1) {
                    activeFilters.splice(activeFilters.findIndex((activeFilter) => activeFilter.type === 'type' && activeFilter.value === option), 1);
                }
            }
            filterList();
        })
    });
</script>