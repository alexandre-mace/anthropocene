{% extends 'base.html.twig' %}

{% block title %}Hello ReportController!{% endblock %}

{% block body %}
    <div class="reports">
        <div class="container mt-5 pt-5 mb-5 pb-5">
            <div class="row">
                <div class="col-md-7">
                    <div class="page-title">
                        Les rapports
                    </div>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row">
                {% for report in reports %}
                    <div class="col-md-4 mb-5">
                        {% include './report/reportCard.html.twig' with {'report': report} %}
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
